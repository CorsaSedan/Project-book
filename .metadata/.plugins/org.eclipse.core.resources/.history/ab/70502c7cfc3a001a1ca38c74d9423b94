        <td th:text="${singleBook.title}"></td>
        <td th:text="${singleBook.autor}"></td>
        <td>
        	<form action="#" th:action="@{/book/{id}(id = ${singleBook.id})}" method="post">
        		<input type="submit" value="Editar">
        	</form>
        
        </td>
      </tr>
    </tbody>
